{
  "name": "nodespace-app",
  "version": "0.1.0",
  "description": "NodeSpace AI-native knowledge management desktop application",
  "type": "module",
  "scripts": {
    "preinstall": "node ../enforce-bun.js",
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "quality": "bun run lint:check && bun run format:check && bun run check",
    "quality:fix": "bun run lint && bun run format && bun run check",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "tauri": "bunx tauri",
    "tauri:dev": "bunx tauri dev",
    "tauri:build": "bunx tauri build"
  },
  "license": "MIT",
  "dependencies": {
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@sveltejs/adapter-static": "^3.0.6",
    "@sveltejs/kit": "^2.9.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tauri-apps/cli": "^2",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.32.0",
    "eslint-plugin-svelte": "^3.11.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwind-variants": "^1.0.0",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.6.2",
    "vite": "^6.0.3",
    "vitest": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "@vitest/coverage-v8": "^2.1.8",
    "@testing-library/svelte": "^5.2.7",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.5.2",
    "msw": "^2.8.3",
    "playwright": "^1.50.3",
    "jsdom": "^26.0.1"
  },
  "engines": {
    "bun": ">=1.0.0",
    "npm": "Please use Bun instead",
    "yarn": "Please use Bun instead",
    "pnpm": "Please use Bun instead"
  },
  "packageManager": "bun@1.0.0"
}
