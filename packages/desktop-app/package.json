{
  "name": "nodespace-app",
  "version": "0.1.0",
  "description": "NodeSpace AI-native knowledge management desktop application",
  "type": "module",
  "scripts": {
    "preinstall": "node ../../enforce-bun.js",
    "postinstall": "bun run scripts/check-dev-deps.ts || true",
    "dev:check": "bun run scripts/check-dev-deps.ts",
    "dev:browser:db": "surreal start --bind 127.0.0.1:8000 --user root --pass root --log info rocksdb:~/.nodespace/database/nodespace-dev",
    "dev:browser:db:prod": "surreal start --bind 127.0.0.1:8000 --user root --pass root --log info rocksdb:~/.nodespace/database/nodespace",
    "dev:browser:db:demo": "surreal start --bind 127.0.0.1:8000 --user root --pass root --log info rocksdb:~/.nodespace/database/demo",
    "dev:browser:proxy": "cargo run -p nodespace-dev-tools --bin dev-proxy",
    "dev:browser:frontend": "BROWSERSLIST_IGNORE_OLD_DATA=1 bunx vite dev --port 5173",
    "dev:browser": "bun run dev:check && bunx concurrently --success first --names 'DB,Proxy,UI' --prefix-colors 'blue,yellow,green' 'bun run dev:browser:db' 'sleep 2 && bun run dev:browser:proxy' 'sleep 4 && bun run dev:browser:frontend'",
    "dev:browser:prod": "bun run dev:check && bunx concurrently --success first --names 'DB,Proxy,UI' --prefix-colors 'blue,yellow,green' 'bun run dev:browser:db:prod' 'sleep 2 && bun run dev:browser:proxy' 'sleep 4 && bun run dev:browser:frontend'",
    "demo:browser": "bun run dev:check && bunx concurrently --success first --names 'DB,Proxy,UI' --prefix-colors 'blue,yellow,green' 'bun run dev:browser:db:demo' 'sleep 2 && bun run dev:browser:proxy' 'sleep 4 && bun run dev:browser:frontend'",
    "dev:tauri:frontend": "bunx vite dev --port 1420",
    "dev:tauri": "MCP_PORT=3100 bunx tauri dev -- --bin nodespace-app",
    "demo:tauri": "NODESPACE_DB_PATH=~/.nodespace/database/demo MCP_PORT=3100 bunx tauri dev -- --bin nodespace-app",
    "dev": "bun run dev:browser",
    "build": "bunx vite build",
    "test": "bunx vitest run",
    "test:watch": "bunx vitest",
    "test:browser": "bunx vitest run --config vitest.browser.config.ts",
    "test:browser:watch": "bunx vitest --config vitest.browser.config.ts",
    "test:coverage": "bunx vitest run --coverage",
    "test:perf": "TEST_FULL_PERFORMANCE=1 bunx vitest run src/tests/performance/",
    "test:db": "TEST_USE_DATABASE=true bunx vitest run",
    "test:db:watch": "TEST_USE_DATABASE=true bunx vitest",
    "test:integration:full": "bun run test && bun run test:browser && bun run test:perf && bun run rust:test",
    "test:all": "bun run test && bun run rust:test",
    "rust:test": "cd src-tauri && cargo test --lib -p nodespace-core -- --test-threads=2",
    "quality:check": "bunx eslint 'src/**/*.{ts,svelte}' && BROWSERSLIST_IGNORE_OLD_DATA=1 bunx svelte-check",
    "quality:fix": "bunx eslint --fix 'src/**/*.{ts,svelte}' && BROWSERSLIST_IGNORE_OLD_DATA=1 bunx svelte-check",
    "tauri": "bunx tauri",
    "tauri:dev": "bun run dev:tauri",
    "tauri:build": "bunx tauri build"
  },
  "license": "MIT",
  "dependencies": {
    "@tauri-apps/api": "^2.8.0",
    "@tauri-apps/plugin-dialog": "^2.6.0",
    "@tauri-apps/plugin-opener": "^2.5.0",
    "@thisux/sveltednd": "^0.0.20",
    "baseline-browser-mapping": "^2.9.18",
    "clsx": "^2.1.1",
    "core-js-compat": "^3.48.0",
    "marked": "^16.2.0",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@internationalized/date": "^3.8.1",
    "@lucide/svelte": "^0.515.0",
    "@sveltejs/adapter-static": "^3.0.6",
    "@sveltejs/kit": "^2.42.2",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tauri-apps/cli": "^2.8.4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.5",
    "@testing-library/user-event": "^14.5.2",
    "@types/marked": "^6.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitest/browser": "2.1.9",
    "@vitest/coverage-v8": "^2.1.8",
    "autoprefixer": "^10.4.21",
    "bits-ui": "^1.4.7",
    "browserslist": "4.28.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.32.0",
    "eslint-plugin-filename-rules": "^1.3.1",
    "eslint-plugin-oxlint": "^1.12.0",
    "eslint-plugin-svelte": "^3.11.0",
    "eslint-plugin-unicorn": "^62.0.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^25.0.1",
    "oxlint": "^1.12.0",
    "playwright": "^1.56.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.39.4",
    "svelte-check": "^4.3.5",
    "tailwind-variants": "^1.0.0",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.6.2",
    "vite": "^6.0.3",
    "vite-bundle-analyzer": "^0.18.0",
    "vitest": "^2.1.8"
  },
  "engines": {
    "bun": ">=1.0.0",
    "npm": "Please use Bun instead",
    "yarn": "Please use Bun instead",
    "pnpm": "Please use Bun instead"
  },
  "packageManager": "bun@1.0.0",
  "overrides": {
    "browserslist": "^4.28.1",
    "baseline-browser-mapping": "^2.9.18"
  },
  "resolutions": {
    "browserslist": "^4.28.1",
    "baseline-browser-mapping": "^2.9.18"
  }
}
