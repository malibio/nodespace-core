{
  "name": "nodespace-core",
  "version": "0.1.0",
  "description": "NodeSpace AI-native knowledge management system with plugin architecture",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "preinstall": "node enforce-bun.js",
    "postinstall": "bun run setup:git-hooks",
    "setup:git-hooks": "bun run scripts/setup-git-hooks.ts",
    "dev": "bun run --cwd packages/desktop-app dev",
    "build": "bun run --cwd packages/desktop-app build",
    "test": "bun run --cwd packages/desktop-app test",
    "check": "bun run --cwd packages/desktop-app check",
    "check:watch": "bun run --cwd packages/desktop-app check:watch",
    "tauri:dev": "cd packages/desktop-app && bun run tauri:dev",
    "tauri:build": "bun run download:models:bundle && cd packages/desktop-app && bun run tauri:build",
    "install:all": "bun install",
    "download:models": "bun run scripts/download-models.ts",
    "download:models:bundle": "bun run scripts/download-models.ts --bundle",
    "gh:status": "bun run scripts/gh-utils.ts issues:status",
    "gh:assign": "bun run scripts/gh-utils.ts issues:assign",
    "gh:unassign": "bun run scripts/gh-utils.ts issues:unassign",
    "gh:create": "bun run scripts/gh-utils.ts issues:create",
    "gh:edit": "bun run scripts/gh-utils.ts issues:edit",
    "gh:list": "bun run scripts/gh-utils.ts issues:list",
    "gh:startup": "bun run scripts/gh-utils.ts issues:startup",
    "gh:view": "bun run scripts/gh-utils.ts issues:view",
    "gh:pr": "bun run scripts/gh-utils.ts pr:create",
    "gh:help": "bun run scripts/gh-utils.ts",
    "review:status": "bun run scripts/review-manager.ts --status",
    "review:reset": "bun run scripts/review-manager.ts --reset",
    "review:full": "bun run scripts/review-manager.ts --mode full",
    "review:delta": "bun run scripts/review-manager.ts --mode delta",
    "review:help": "bun run scripts/review-manager.ts --help",
    "rust:format": "cargo fmt --all",
    "rust:format:check": "cargo fmt --all --check",
    "rust:lint": "cargo clippy --all-targets --all-features -- -D warnings -D clippy::unused-async",
    "rust:quality": "bun run rust:format:check && bun run rust:lint",
    "rust:quality:fix": "bun run rust:format && bun run rust:lint",
    "quality:fix": "bun run --cwd packages/desktop-app quality:fix && bun run rust:quality:fix",
    "quality:check": "bun run --cwd packages/desktop-app quality && bun run rust:quality",
    "container:build": "bun run scripts/container.ts build",
    "container:run": "bun run scripts/container.ts run",
    "container:run:setup": "bun run scripts/container.ts run:setup",
    "container:save": "bun run scripts/container.ts save",
    "container:list": "bun run scripts/container.ts list",
    "container:stop": "bun run scripts/container.ts stop",
    "container:resize": "bun run scripts/container.ts resize",
    "container:help": "bun run scripts/container.ts"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "bun-types": "latest",
    "jsdom": "^26.1.0"
  },
  "license": "MIT",
  "engines": {
    "bun": ">=1.0.0",
    "npm": "Please use Bun instead",
    "yarn": "Please use Bun instead",
    "pnpm": "Please use Bun instead"
  },
  "packageManager": "bun@1.0.0",
  "dependencies": {
    "@octokit/graphql": "^9.0.1",
    "@octokit/rest": "^22.0.0"
  }
}